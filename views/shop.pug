extends layouts/main-layout.pug

block styles
  link(rel="stylesheet", href="/css/shop.css")

block content
  main
    if prods.length > 0
      .grid 
        each prod in  prods
          article.card.product-item 
            header.card__header
              h1.product__title #{prod.title} 
            .card_image
              img(src="", alt="A Book")
            .card__content
              h2.product__price Rs 199
              p.product__description Book by Marcus Aurelius
            .card__actions 
              button.btn Add to Cart
    else 
      h1 No Products!
