<main>
  {{#if hasProducts}}
    <div class="grid">
      <article class="card product-item">
        <header class="card__header">
          <h1 class="product__title">Meditations</h1>
        </header>
        <div class="card__image">
          <img src="" alt="Favorite Book" />
        </div>
        <div class="card__content">
          <h2 class="product__price">Rs 299</h2>
          <p class="product__description">Book by Marcus Aurelius</p>
        </div>
        <div class="card__actions">
          <button class="btn">Add to Cart</button>
        </div>
      </article>
    </div>
  {{/if}}
</main>